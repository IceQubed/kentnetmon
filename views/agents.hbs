<head>
    <!-- Load c3.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.11/c3.css" rel="stylesheet" type="text/css">

    <!-- Load d3.js and c3.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.11/c3.min.js"></script>
</head>

<body>

    <header>
        <h2>{{title}}</h2>
    </header>

    <nav>
        <ul>
            <center>
                <li>
                    <a href="/"><img border=0px alt="Dashboard" src="../images/graph.svg">Dashboard</a>
                </li><br><br>
                <li>
                    <a href="/addagent"><img border=0px alt="Add Agent" src="../images/add.svg">Add Agent</a>
                </li>
            </center>
        </ul>
    </nav>

    <div class="content-container">
        <div class="agents">
            {{#each agents}}
            <div class="agent" data-id="{{this.id}}">
                <h1>{{this.name}} <span data-purpose="status"></span></h1>

                <div>
                    <div class="statsandcontrols">
                        <table style="width:100%">
                            <col width="170">
                            <tr>
                                <th>
                                    <h2>Details</h2>
                                </th>
                            </tr>
                            <tr></tr>
                            <tr>
                                <th>Location</th>
                                <td>{{this.location}}</td>
                            </tr>
                            <tr>
                                <th>Network Address</th>
                                <td>{{this.ipAddr}}</td>
                            </tr>
                            <tr>
                                <th>
                                    <h2><br>Latest Test</h2>
                                </th>
                            </tr>
                            <tr></tr>
                            <tr>
                                <th>Date</th>
                                <td>{{this.testDate}}</td>
                            </tr>
                            <tr>
                                <th>Throughput (Received)</th>
                                <td>{{this.throughputReceived}}</td>
                            </tr>
                            <tr>
                                <th>Throughput (Sent)</th>
                                <td>{{this.throughputSent}}</td>
                            </tr>
                            <tr>
                                <th>Jitter</th>
                                <td>{{this.jitter}}</td>
                            </tr>
                            <tr>
                                <th>Packet Loss</th>
                                <td>{{this.packetLoss}}</td>
                            </tr>
                            <tr>
                                <th>Latency</th>
                                <td>{{this.latency}}</td>
                            </tr>
                        </table>

                        <nav>
                            <h2><br>Controls</h2>
                            <div class="schedulebutton">
                                <form action=/schedule/{{this.id}}>
                                    <input id="editSchedule" type="submit" value="Edit Schedule" />
                                </form>
                            </div>
                            <button data-action="run-tests">Run Both Tests (TCP & UDP)</button>
                            <button data-action="run-test-tcp">Run Throughput Test (TCP)</button>
                            <button data-action="run-test-udp">Run Jitter & Packet Loss Test (UDP)</button>
                            <button data-action="delete">Delete Agent</button>
                        </nav>
                    </div>

                    <div class="graphcontainer">
                        <div class="graphTCP" data-agent-tcp-id="{{this.id}}"></div>
                        <form>
                            <center>
                                <br><br>
                                <table>
                                    <tr>
                                        <th>View graph from:</th>
                                        <td><input type="date" name="fromDateTCP"></td>
                                    </tr>
                                    <tr>
                                        <th>View graph to:</th>
                                        <td><input type="date" name="toDateTCP"></td>
                                    </tr>
                                </table>
                            </center>
                        </form>
                    </div>

                    <div class="graphcontainer">
                        <div class="graphUDP" data-agent-udp-id="{{this.id}}"></div>
                        <form>
                            <center>
                                <br><br>
                                <table>
                                    <tr>
                                        <th>View graph from:</th>
                                        <td><input type="date" name="fromDateUDP"></td>
                                    </tr>
                                    <tr>
                                        <th>View graph to:</th>
                                        <td><input type="date" name="toDateUDP"></td>
                                    </tr>
                                </table>
                            </center>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <footer class="footer ">Â© Ben Adamson</footer>

    <!--    <script src="/javascripts/graphs.js"></script>-->
    <script src="/javascripts/generateGraphTCP.js"></script>
    <script src="/javascripts/graphsUDP.js"></script>
    <script src="/javascripts/agent.js"></script>
</body>
